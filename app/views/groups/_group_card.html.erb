
<div class="group-card">

  <div class="band-name">
    <%= link_to group.name, group_path(group) %>
  </div>

  <div class="group-card-description">
    <%= "#{group.genre.capitalize} | #{group.level.capitalize}" %>
    <br>
    <div class='group-description-line'> <%= group.description %> </div>
  </div>

  <div class="group-card-members">
    <% group.users.each do |member| %>
    <div class="group-card-member-avatar">
      <%= image_tag member.facebook_picture_url || 'http://lorempixel.com/70/70/people', class: "avatar-index" %>
    </div>
    <% end %>
  </div>

  <div class="studio-card">
    <%= image_tag 'http://www.clker.com/cliparts/B/V/P/X/Z/e/thumbtack-pushpin-2-th.png', class: 'studio-thumb-tack' %>
    <div class="studio-card-description">
      <%= group.studio.name || "Studio name" %>
      <br>
      <i class="fa fa-star" aria-hidden="true"></i>
      <i class="fa fa-star" aria-hidden="true"></i>
      <i class="fa fa-star" aria-hidden="true"></i>
      <i class="fa fa-star" aria-hidden="true"></i>
      <i class="fa fa-star-half" aria-hidden="true"></i>
      <%= "$#{group.studio.price}/hr" %>
    </div>
  </div>

</div>


