<div class="groupcard">
  <div class="bandname">
    <h3> <%= link_to group.name, group_path(group) %> </h3>
    <div class="genre">
      <p> <%= group.genre.capitalize %> </p>
    </div>
    <div class="city">
    <p> <%= group.studio.city %> </p>
    </div>
  </div>
  <div class="admin">
    <p> <%= "Group admin: #{group.admin.name}" %> </p>
  </div>
  <div class="member">
    <p> Group members:
      <% group.users.each do |member| %>
      <%= "#{member.name} |" %>
      <% end %>
    </div>
  </p>
  <div class="description">
  <p> <%= group.description %> </p>
  </div>
</div>
