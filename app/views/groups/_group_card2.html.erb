

<div class="group-card-b">

  <div class="group-card-band-name">
    <%= link_to group.name, group_path(group) %>
  </div>

  <%= cl_image_tag group.studio.photos.first.path, class: 'group-card-studio-image'  %>

  <div class="group-card-level-tag">
    <%= "#{group.genre.capitalize} | #{group.level.capitalize}" %>
  </div>

<%= link_to "", group_path(group), class: "group-card-link"%>

  <div class="group-card-description-b">
    <%= group.description %>
  </div>

  <div class="group-card-members">
    <% group_admin = group.admin %>
    <% group_members = group.users.reject {|user| user == group.admin} %>

    <div class="group-card-member-avatar">
    <%= generate_profile_picture(group_admin,  ["avatar-index"]) %>
    </div>

    <% group_members.each do |member| %>
    <div class="group-card-member-avatar">
      <%= generate_profile_picture(member,  ["avatar-index"]) %>
    </div>
    <% end %>
  </div>

