<div class="bg-user-show">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="user-bkg-box">
          <div class="user-title text-center">
            <%= @user.name %>
          </div>

          <div class="row">
            <div class="col-xs-8">
              <div class="user-summary">
