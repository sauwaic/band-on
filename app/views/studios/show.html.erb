<div class="container">
  <div class="row">
    <div class="col-xs-6">
     <% if @studio.photo? %>
     <%= cl_image_tag @studio.photo.path, width: 200, height: 300, crop: :fill %>
     <% end %>
     <h1> <%= @studio.name %> </h1>
     <h4> Address: <%= @studio.address %> </h4>
     <h4> $<%= @studio.price %>/hour </h4>
      <br>
      <br>
      <h2>Available slots</h2>
      <% if @available_slots.blank? %>
      <h4>There are no spots available</h4>
      <% else %>
      <% @available_slots.each do |slot| %>
      <p> <%= "#{slot.date.strftime("%A, %d %B %Y")}: #{slot.start_time.strftime("%l:%M %p")} - #{slot.end_time.strftime("%l:%M %p")}" %> </p>
      <% end %>
      <% end %>
      <%= link_to "Add availabilities", new_studio_slot_path(@studio), class: "btn btn-primary" %>
   </div>

   <div class = "col-xs-6" style = "background-color: #dedef8;
   box-shadow: inset 1px -1px 1px #444, inset -1px 1px 1px #444;">

   <div id="map" style="width: 100%; height: 100vh; position: static"></div>

   <% content_for(:after_js) do %>
   <%= javascript_tag do %>
   $(document).ready(function() {
   var handler = Gmaps.build('Google');
   var styles = <%= render 'mapstyle'%>;
   handler.buildMap({
   provider: {
   styles: styles
 },
 internal: { id: 'map' } }, function() {
 markers = handler.addMarkers(<%= raw @hash.to_json %>);
 handler.bounds.extendWith(markers);
 handler.fitMapToBounds();
 if (markers.length == 0) {
 handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
</div>
</div>
</div>
